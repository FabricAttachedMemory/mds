<project basedir="." default="build" name="MDS - Java API">
	<property name="target" value="1.8" />
	<property name="source" value="1.8" />
	<property name="build-dir" value="ant" />
	<property name="threads" value="3" />
	<property name="build" value="opt" />
	

	<presetdef name="javac">
		<javac includeantruntime="false" />
	</presetdef>

	<target name="generate-src">
		<ant antfile="mds-src-generator.xml" target="build" />
	</target>
	
	<target name="is-debug-build">
		<condition property="isDebugBuild" else="false">
			<equals arg1="${build}" arg2="debug" />
		</condition>
	</target>

	<target name="mds-java-api-jar" depends="is-debug-build">
		<ant antfile="mds-java-api-jar.xml" target="build">
			<property name="debug-build" value="${isDebugBuild}" />
		</ant>
	</target>

	<target name="annotation-processor-jar" depends="is-debug-build">
		<ant antfile="build.xml" target="build" dir="annotations">
			<property name="jar.dir" value="../jars" />
			<property name="debug-build" value="${isDebugBuild}" />
		</ant>
	</target>

	<target name="mds-jni">
		<exec executable="make" dir="build/intel-${build}/" failonerror="true">
			<arg value="all" />
			<arg value="-j${threads}" />
		</exec>
	</target>

	<target name="generate-cpp">
		<ant antfile="mds-src-generator.xml" target="generate-cpp" />
	</target>

	<target name="generate-java">
		<ant antfile="mds-src-generator.xml" target="generate-java" />
	</target>

	<target name="cpp" depends="generate-cpp, mds-jni" />

	<target name="java" depends="generate-java, mds-java-api-jar, annotation-processor-jar" />


	<target name="build" depends="generate-src, mds-java-api-jar, annotation-processor-jar, mds-jni" />

	<target name="clear-generator">
		<ant antfile="mds-src-generator.xml" target="clean" />
	</target>

	<target name="clean-java-api-jar">
		<ant antfile="mds-java-api-jar.xml" target="clean" />
	</target>

	<target name="clean-annotation-processor">
		<ant antfile="build.xml" target="clean" dir="annotations">
			<property name="jar.dir" value="../jars" />
		</ant>
	</target>

	<target name="clean-jni">
		<exec executable="make" dir="build/intel-opt/">
			<arg value="clean-recursive" />
		</exec>
	</target>

	<target name="clean" depends="clear-generator, clean-java-api-jar, clean-annotation-processor, clean-jni" />

</project>
