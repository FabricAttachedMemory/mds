<project basedir="." default="build" name="MDS - Java API">
	<property name="target" value="1.8" />
	<property name="source" value="1.8" />
	<property name="generator-src-dir" value="generator-src" />
	<property name="generated-src-dir" value="generated-src" />
	<property name="erk-src-dir" value="erk-src" />
	<property name="build-dir" value="ant" />
	<property name="generator-classes-dir" value="${build-dir}/generator" />

	<presetdef name="javac">
		<javac includeantruntime="false" />
	</presetdef>

	<path id="generator.libs">
		<pathelement location="external/log4j-1.2.15.jar" />
		<pathelement location="external/ST-4.0.8.jar" />
		<pathelement location="external/colt120.jar" />
		<pathelement location="external/commons-compress-1.1.jar" />
	</path>

	<target name="compile-generator">
		<echo message="Compiling generator..." />
		<mkdir dir="${generator-classes-dir}" />
		<javac srcdir="${generator-src-dir}" destdir="${generator-classes-dir}" source="${source}" target="${target}">
		  <src path="${erk-src-dir}" />
		  <classpath refid="generator.libs" />
                  <compilerarg line="-encoding utf-8"/>
		</javac>
	</target>

	<target name="generate-specific" depends="compile-generator">
		<echo message="Generating code..." />
		<mkdir dir="${generated-src-dir}" />
		<java classname="com.hpl.mds.generator.Generator">
			<classpath location="${generator-classes-dir}" />
			<classpath refid="generator.libs" />
			<arg line="-templates=${templates},empty" />
		</java>
	</target>

	<target name="generate-src" depends="set-files-to-generate">
		<echo message="Generating code..." />
		<mkdir dir="${generated-src-dir}" />
		<java classname="com.hpl.mds.generator.Generator">
			<classpath location="${generator-classes-dir}" />
			<classpath refid="generator.libs" />
			<arg line="-templates=${updated.templates},empty" />
		</java>
	</target>

	<target name="generate-cpp" depends="set-files-to-generate">
		<echo message="Generating C++ code..." />
		<mkdir dir="${generated-src-dir}" />
		<java classname="com.hpl.mds.generator.Generator">
			<classpath location="${generator-classes-dir}" />
			<classpath refid="generator.libs" />
			<arg line="-types='[cpp,cpph]'" />
			<arg line="-templates=${updated.templates},empty" />
		</java>
	</target>

	<target name="generate-java" depends="set-files-to-generate">
		<echo message="Generating Java code..." />
		<mkdir dir="${generated-src-dir}" />
		<java classname="com.hpl.mds.generator.Generator">
			<classpath location="${generator-classes-dir}" />
			<classpath refid="generator.libs" />
			<arg line="-types=java" />
			<arg line="-templates=${updated.templates},empty" />
		</java>
	</target>

	<target name="clean">
		<delete dir="${generator-classes-dir}" />
	</target>

	<target name="set-files-to-generate">
		<pathconvert property="updated.templates" pathsep=",">
			<chainedmapper>
				<flattenmapper />
				<globmapper from="*.stg" to="*" />
			</chainedmapper>
			<fileset dir="templates">
				<modified update="true">
					<param name="cache.cachefile" value="templates.idx" />
					<param name="algorithm.algorithm" value="MD5" />
				</modified>
			</fileset>
		</pathconvert>
		<echo message="updated.templates: ${updated.templates}" />
	</target>

	<target name="build" depends="compile-generator, generate-src" />

</project>
